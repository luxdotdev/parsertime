  victim_name      String
  victim_hero      String
  event_ability    String
  event_damage     Int
  is_critical_hit  String
  is_environmental String

  MapData   MapData? @relation(fields: [MapDataId], references: [id])
  MapDataId Int?

  @@index([scrimId])
  @@index([MapDataId])
